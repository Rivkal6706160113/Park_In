<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.d3ifcool.park_in.tambahPark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Tempat"
            android:textSize="20dp"
            android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_tempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Tempat"
                android:textColor="#616161"
                android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keterangan Tempat"
            android:textColor="#616161"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="Foto Tempat"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btn_img_foto"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/image" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#448aff"
        android:text="Tambahkan Parkir"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

